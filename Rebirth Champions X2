function comma_value(amount)
    local formatted = amount
    while true do  
        formatted, k = string.gsub(formatted, "^(-?%d+)(%d%d%d)", '%1,%2')
        if (k==0) then
            break
        end
    end
    return formatted
end

function toHex(x) 
    local hex =  string.format("%x", x)
    return hex:len() == 1 and "0"..hex or hex
end
function RGB2HEX(r,g,b) 
    return "0x" .. toHex(r) .. toHex(g) .. toHex(b)
end

getgenv().TimeFormat = getgenv().TimeFormat or "TIME12" 

--Get Counts
    local count1 = comma_value(game:GetService("Players")[playerName].Stats.EggsOpened.Value)
    local count2 = string.format('%d-%d-%dT%02d:%02d:%02dZ', Time.year, Time.month, Time.day, Time.hour, Time.min, Time.sec)

function FormatTime(str: string)
    for i,v in pairs(Times) do
        str = str:gsub(i, v)
    end
    return str
end

